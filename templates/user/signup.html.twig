{% extends 'base.html.twig' %}
    
    {% block main %}
        {% use "user/_user_layout.html.twig" with debut_userFile as parent_debut, errorMessage_userFile as parent_errorMessage , end_userFile as parent_end %}
        {% block debut_userFile %}
            {{ block('parent_debut') }}
        {% endblock debut_userFile %}

        {% block errorMessage_userFile %}
            {{ block('parent_errorMessage') }}
        {% endblock errorMessage_userFile %}

        {% block signUp_form %}
            {{ form_start(form) }}
                {{ form_row(form.username) }}
                {{ form_row(form.password) }}

                <input type="password" name="verifPassword" id="password" class="fadeIn third" placeholder="Mot de passe" required/>

                {{ form_row(form.MailUtilisateur) }}
                {{ form_row(form.Sinscrire) }}
            {{ form_end(form) }}
        {% endblock signUp_form %}

        {% block end_userFile %}
            {{ block('parent_end') }}
        {% endblock end_userFile %}           
    {% endblock main %}      

{% block javascripts %}{% endblock %}