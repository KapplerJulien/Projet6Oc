<div class="cover-container-show d-flex w-100 h-100 p-3 mx-auto flex-column ">
    <div class="d-flex justify-content-center mb-auto">
        <header class="masthead cover-container-show-header">
            <div class="inner">
                <h3 class="masthead-brand">TriksPédia</h3>
                <nav class="nav nav-masthead justify-content-center">
                    <a 
                    {% if app.request.attributes.get('_route') == 'home' %}
                        class="nav-link active"
                    {% else %} 
                        class="nav-link"
                    {% endif %}
                    href="{{ path('home') }}">Home</a>
                    {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                    {# {{ dump(userId) }} #}
                        <a 
