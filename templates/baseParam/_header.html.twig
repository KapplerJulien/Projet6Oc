                        {% else %} 
                            class="nav-link"
                        {% endif %}
                        href="{{ path('article_triks_new') }}">New article</a>
                        <a class="nav-link" href="{{ path('app_logout') }}">Se déconnecter</a>
                    {% else %}
                        <a 
                        {% if app.request.attributes.get('_route') == 'app_login' %}
                            class="nav-link active"
                        {% else %} 
                            class="nav-link"
                        {% endif %}
                        href="{{ path('app_login') }}">Se connecter</a>
                    {% endif %}
                </nav>
            </div>
        </header>
