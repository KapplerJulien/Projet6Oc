<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}TriksPédia!{% endblock %}</title>
        {% block stylesheets %}
            <link href="{{ asset('build/app.css') }}" type="text/css" rel="stylesheet" />
        {% endblock %}
    </head>
    <body>
        {% block body %}
            {# Cover part #}
            <div class="cover-container-show d-flex w-100 h-100 p-3 mx-auto flex-column ">
                <div class="d-flex justify-content-center mb-auto">
                    <header class="masthead cover-container-show-header">
                        <div class="inner">
                            <h3 class="masthead-brand">TriksPédia</h3>
                            <nav class="nav nav-masthead justify-content-center">
                                <a class="nav-link" href="{{ path('home') }}">Home</a>
                                <a class="nav-link" href="#">Triks</a>
                                <a class="nav-link active" href="{{ path('app_login') }}">Se connecter</a>
                            </nav>
                        </div>
                    </header>
                </div>
        
                <main role="main" class="inner cover text-center">
                    <div class="wrapper fadeInDown">
                        <div id="formContent">
                            {% if error %}
                                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                            {% endif %}
                            {% if app.user %}
                                <div class="mb-3">
                                    Vous êtes déjà connecté en tant que {{ app.user.username }}, <a href="{{ path('app_logout') }}">Se déconnecter</a>
                                </div>
                            {% endif %}
                            <!-- Tabs Titles -->

                            <!-- Login Form -->
                            <form method="post">
                                <input type="text" value="{{ last_username }}" name="username" id="inputUsername" class="fadeIn second" placeholder="Pseudo" required>
                                <input type="password" name="password" id="inputPassword" class="fadeIn third" placeholder="Mot de passe"  required>

                                <input type="hidden" name="_csrf_token"
                                    value="{{ csrf_token('authenticate') }}"
                                >

                                {#
                                    Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                                    See https://symfony.com/doc/current/security/remember_me.html

                                    <div class="checkbox mb-3">
                                        <label>
                                            <input type="checkbox" name="_remember_me"> Remember me
                                        </label>
                                    </div>
                                #}

                                <button class="btn-user" type="submit">
                                    Sign in
                                </button>
                            </form>

                            <!-- Remind Passowrd -->
                            <div id="formFooter">
                                <a class="underlineHover forgotPassword" href="user/emailEditPassword">Mot de passe oublié?</a>
                                <a class="underlineHover forgotPassword" href="user/signUp">S'inscrire</a>
                            </div>

                        </div>
                    </div>
                </main>

                <footer class="mastfoot mt-auto ">
                    <div class="inner text-center">
                    <p>Site créé avec <a href="https://getbootstrap.com/">Bootstrap</a> et <a href="https://symfony.com/">symfony 5</a>.</p>
                    </div>
                </footer>

            </div>
    {% endblock %}
    {% block javascripts %}{% endblock %}
    </body>
</html>
